                            x:Uid="Settings_PrivacyTermsLink"
                            Margin="{StaticResource XSmallTopMargin}"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
                <ScrollViewer
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <TextBlock
                            Margin="{StaticResource MediumTopMargin}"
                            Style="{ThemeResource SubtitleTextBlockStyle}"
                            Text="Special thanks" />

                        <StackPanel Margin="{StaticResource XSmallTopMargin}">
                            <TextBlock
                                Margin="{StaticResource XSmallTopMargin}"
                                Style="{ThemeResource BodyTextBlockStyle}"
                                Text="The software uses machine learning algorithms to recognize your doodling and to provide you with some drawings to learn." />
                            <TextBlock
                                Margin="{StaticResource XSmallTopMargin}"
                                Style="{ThemeResource BodyTextBlockStyle}"
                                Text="Thanks here :" />
                            <TextBlock
                                Margin="{StaticResource XSmallTopMargin}"
                                Style="{ThemeResource BodyTextBlockStyle}"
                                Text="Microsoft ML.NET : ML.NET is an open source and cross-platform machine learning framework for .NET. " />
                            <HyperlinkButton
                                Margin="{StaticResource XSmallTopMargin}"
                                Content="ML.NET"
                                NavigateUri="https://github.com/dotnet/machinelearning" />
                            <TextBlock
                                Margin="{StaticResource XSmallTopMargin}"
                                Style="{ThemeResource BodyTextBlockStyle}"
                                Text="Google Creative Lab : The software uses the Quick, Draw! Dataset(Creative Commons Attribution 4.0 International License) to train neural networks to recognize your doodling，and uses the drawings from AutoDraw(Creative Commons Attribution 4.0 nternational License)." />
                            <HyperlinkButton
                                Margin="{StaticResource XSmallTopMargin}"
                                Content="The Quick, Draw! Dataset"
                                NavigateUri="https://github.com/googlecreativelab/quickdraw-dataset" />
                            <HyperlinkButton
                                Margin="{StaticResource XSmallTopMargin}"
                                Content="AutoDraw"
                                NavigateUri="https://www.autodraw.com/" />
                            <TextBlock
                                Margin="{StaticResource XSmallTopMargin}"
                                Style="{ThemeResource BodyTextBlockStyle}"
                                Text="Justin Liu : Justin is a great uwp developer and designer. His demo application has given me a lot of help with its great UI design and smooth animations!" />

